App.js:
import React, { useState } from "react";
function App() {
  const [show, setShow] = useState(true);
  return (
    <div>
      <h2>Toggle Text Example</h2>
      <button onClick={() => setShow(!show)}>Show / Hide</button>
      {show && <p>This is some text!</p>}
    </div>
  );
}
export default App;
