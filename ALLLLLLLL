import React, { useState } from "react";
function App() {
  const [likes, setLikes] = useState(0);
  const handleLike = () => {
  setLikes(likes + 1);
  };
  return (
    <div>
      <h2>Like Button</h2>
      <p>Likes: {likes}</p>
      <button onClick={handleLike}>Like</button>
    </div>
  );
}
